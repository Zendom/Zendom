<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#484848"
    android:textAlignment="center"
    tools:context="ua.co.zen.TemperatureActivity" >

   <GridLayout
        android:id="@+id/tempLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:columnCount="4"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/headerButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="@null"
            android:src="@drawable/zen_1" />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="#ffffff"
            android:text=" " />

        <ImageView
            android:id="@+id/bedroomImage"  
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="5"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:src="@drawable/zen_temp_1" />

        <ImageView
            android:id="@+id/kitchenImage"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="5"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:src="@drawable/zen_temp_2" />

        <ImageView
            android:id="@+id/toiletImage"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="6"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:src="@drawable/zen_temp_3" />

        <ImageView
            android:id="@+id/streetImage" 
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="6"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:src="@drawable/zen_temp_4" />

       
        <TextView
            android:id="@+id/bedroomTemp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="5"
            android:paddingLeft="40dp"
            android:paddingRight="25dp"
            android:text="--"
            android:textAlignment="center"
            android:textColor="#888888"
            android:textSize="65dp" />

        <TextView
            android:id="@+id/kitchenTemp"
 			android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:layout_row="5"
            android:paddingRight="53dp"
            android:text="--"
            android:textAlignment="center"
            android:textColor="#888888"
            android:textSize="65dp" />
        
         <TextView
            android:id="@+id/toiletTemp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="6"
            android:paddingLeft="40dp"
            android:paddingRight="25dp"
            android:text="--"
            android:textAlignment="center"
            android:textColor="#888888"
            android:textSize="65dp" />
        

        <TextView
            android:id="@+id/streetTemp"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:layout_row="6"
            android:paddingRight="53dp"
            android:text="--"
            android:textAlignment="center"
            android:textColor="#888888"
            android:textSize="65dp" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_gravity="left|bottom"
            android:layout_row="7"
            android:clickable="false"
            android:text="Button"
            android:visibility="invisible" />
        
    </GridLayout>

</RelativeLayout>
