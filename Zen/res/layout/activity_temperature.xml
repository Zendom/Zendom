<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#484848"
    android:textAlignment="center"
    tools:context="ua.co.zen.Temperature" >

    <GridLayout
        android:id="@+id/tempLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:columnCount="4"
        android:orientation="horizontal" >

       <ImageButton
           android:id="@+id/headerButton"
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="1"
           android:background="@null"
           android:src="@drawable/zen_1" />
       
       <Button
              android:id="@+id/infoButton"
              android:layout_width="match_parent"
              android:layout_column="0"
              android:layout_gravity="left|top"
              android:layout_row="2"
              android:background="#ffffff"
              android:text=" " />

       <ImageButton
           android:id="@+id/statusButton"
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="4"
           android:background="@null"
           android:src="@drawable/zen_3" />

       <ImageView
           android:id="@+id/bedroomImage"
           android:layout_width="160dp"
           android:layout_height="139dp"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="5"
           android:paddingBottom="5dp"
           android:paddingLeft="5dp"
           android:paddingTop="5dp"
           android:src="@drawable/zen_temp_1" />

       <ImageView
           android:id="@+id/kitchenImage"
           android:layout_width="160dp"
           android:layout_height="139dp"
           android:layout_column="0"
           android:layout_gravity="right|top"
           android:layout_row="5"
           android:paddingBottom="5dp"
           android:paddingLeft="5dp"
           android:paddingRight="5dp"
           android:paddingTop="5dp"
           android:src="@drawable/zen_temp_2" />

       <ImageView
           android:id="@+id/toiletImage"
           android:layout_width="160dp"
           android:layout_height="139dp"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="6"
           android:paddingBottom="5dp"
           android:paddingLeft="5dp"
           android:paddingTop="5dp"
           android:src="@drawable/zen_temp_3" />

       <ImageView
           android:id="@+id/streetImage"
           android:layout_width="160dp"
           android:layout_height="139dp"
           android:layout_column="0"
           android:layout_gravity="right|top"
           android:layout_row="6"
           android:paddingBottom="5dp"
           android:paddingLeft="5dp"
           android:paddingRight="5dp"
           android:paddingTop="5dp"
           android:src="@drawable/zen_temp_4" />

       <TextView
           android:id="@+id/bedroomTemp"
           android:layout_height="57dp"
           android:layout_column="0"
           android:layout_gravity="left|center_vertical"
           android:layout_row="5"
           android:paddingLeft="40dp"
           android:paddingRight="25dp"
           android:text="25"
           android:textAlignment="center"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#888888"
           android:textSize="55dp" />

       <TextView
           android:id="@+id/gradusView"
           android:layout_column="0"
           android:layout_gravity="left|center_vertical"
           android:layout_row="5"
           android:paddingLeft="110dp"
           android:text="째"
           android:textAlignment="center"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#888888"
           android:textSize="55dp" />

       <TextView
           android:id="@+id/gradusView2"
           android:layout_column="0"
           android:layout_gravity="right|center_vertical"
           android:layout_row="5"
           android:paddingRight="25dp"
           android:text="째"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#888888"
           android:textSize="55dp" />

       <TextView
           android:id="@+id/gradusView4"
           android:layout_column="0"
           android:layout_gravity="right|center_vertical"
           android:layout_row="6"
           android:paddingRight="25dp"
           android:text="째"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#888888"
           android:textSize="55dp" />

       <TextView
           android:id="@+id/gradusView3"
           android:layout_column="0"
           android:layout_gravity="left|center_vertical"
           android:layout_row="6"
           android:paddingLeft="110dp"
           android:text="째"
           android:textAlignment="center"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#888888"
           android:textSize="55dp" />

       <TextView
           android:id="@+id/kitchenTemp"
           android:layout_height="57dp"
           android:layout_column="0"
           android:layout_gravity="right|center_vertical"
           android:layout_row="5"
           android:paddingRight="53dp"
           android:text="23"
           android:textAlignment="center"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#888888"
           android:textSize="55dp" />

       <TextView
           android:id="@+id/toiletTemp"
           android:layout_height="57dp"
           android:layout_column="0"
           android:layout_gravity="left|center_vertical"
           android:layout_row="6"
           android:paddingLeft="40dp"
           android:paddingRight="25dp"
           android:text="19"
           android:textAlignment="center"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#888888"
           android:textSize="55dp" />

       <TextView
           android:id="@+id/streetTemp"
           android:layout_height="57dp"
           android:layout_column="0"
           android:layout_gravity="right|center_vertical"
           android:layout_row="6"
           android:paddingRight="53dp"
           android:text="15"
           android:textAlignment="center"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#888888"
           android:textSize="55dp" />
       
    </GridLayout>

</RelativeLayout>
