<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#484848"
    tools:context="ua.co.zen.MainActivity" >

   <GridLayout
       android:id="@+id/gridLayout1"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:columnCount="4"
       android:orientation="horizontal" >

       <ImageButton
           android:id="@+id/headerButton"
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="1"
           android:background="@null"
           android:src="@drawable/zen_1" />
       
          <Button
              android:id="@+id/infoButton"
              android:layout_width="match_parent"
              android:layout_column="0"
              android:layout_gravity="left|top"
              android:layout_row="2"
              android:background="#ffffff"
              android:text=" " />
          
       <ImageButton
           android:id="@+id/conditionButton"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="4"
           android:background="@null"
           android:src="@drawable/zen_status_01" />

       <ImageButton
           android:id="@+id/scenaButton"
           android:layout_column="0"
           android:layout_gravity="center_horizontal|top"
           android:layout_row="4"
           android:background="@null"
           android:src="@drawable/zen_status_02" />

       <ImageButton
           android:id="@+id/socketButton"
           android:layout_column="0"
           android:layout_gravity="right|top"
           android:layout_row="4"
           android:background="@null"
           android:src="@drawable/zen_status_03" />
          

       <ImageButton
           android:id="@+id/electricButton"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="5"
           android:background="@null"
           android:src="@drawable/zen_4" />

       <ImageButton
           android:id="@+id/cameraButton"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="center_horizontal|top"
           android:layout_row="5"
           android:background="@null"
           android:src="@drawable/zen_5" />

       <ImageButton
           android:id="@+id/tempButton"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="right|top"
           android:layout_row="5"
           android:background="@null"
           android:src="@drawable/zen_6" />

       <ImageButton
           android:id="@+id/securityButton"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="6"
           android:background="@null"
           android:src="@drawable/zen_7" />

       <ImageButton
           android:id="@+id/voiceButton"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="center_horizontal|top"
           android:layout_row="6"
           android:background="@null"
           android:src="@drawable/zen_8" />

       <ImageButton
           android:id="@+id/waterButton"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="right|top"
           android:layout_row="6"
           android:background="@null"
           android:src="@drawable/zen_9" />

       <ImageButton
           android:id="@+id/doorButton"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="7"
           android:background="@null"
           android:src="@drawable/zen_10" />

       <ImageButton
           android:id="@+id/multiButton"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="center_horizontal|top"
           android:layout_row="7"
           android:background="@null"
           android:src="@drawable/zen_11" />

       <ImageButton
           android:id="@+id/lightButton"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="right|top"
           android:layout_row="7"
           android:background="@null"
           android:src="@drawable/zen_12" />



   </GridLayout>

</RelativeLayout>