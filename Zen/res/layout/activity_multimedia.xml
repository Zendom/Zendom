<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#484848"
    tools:context="ua.co.zen.MultimediaActivity" >
    
	<GridLayout
       android:id="@+id/gridLayout1"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:columnCount="4"
       android:orientation="horizontal" >

       <ImageButton
           android:id="@+id/headerButton"
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="1"
           android:background="@null"
           android:src="@drawable/zen_1" />
       
          <Button
              android:id="@+id/infoButton"
              android:layout_width="match_parent"
              android:layout_column="0"
              android:layout_gravity="left|top"
              android:layout_row="2"
              android:background="#ffffff"
              android:text=" " />

       <ImageButton
           android:id="@+id/soundMulti"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="5"
           android:background="@null"
           android:src="@drawable/zen_multi_1" />

       <ImageButton
           android:id="@+id/volupMulti"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="center_horizontal|top"
           android:layout_row="5"
           android:background="@null"
           android:src="@drawable/zen_multi_2" />

       <ImageButton
           android:id="@+id/onMulti"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="right|top"
           android:layout_row="5"
           android:background="@null"
           android:src="@drawable/zen_multi_3" />

       <ImageButton
           android:id="@+id/backMulti"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="6"
           android:background="@null"
           android:src="@drawable/zen_multi_4" />

       <ImageButton
           android:id="@+id/playMulti"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="center_horizontal|top"
           android:layout_row="6"
           android:background="@null"
           android:src="@drawable/zen_multi_5" />

       <ImageButton
           android:id="@+id/forwMulti"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="right|top"
           android:layout_row="6"
           android:background="@null"
           android:src="@drawable/zen_multi_6" />

       <ImageButton
           android:id="@+id/stopMulti"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="left|top"
           android:layout_row="7"
           android:background="@null"
           android:src="@drawable/zen_multi_7" />

       <ImageButton
           android:id="@+id/voldownMulti"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="center_horizontal|top"
           android:layout_row="7"
           android:background="@null"
           android:src="@drawable/zen_multi_8" />

       <ImageButton
           android:id="@+id/pauseMulti"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_column="0"
           android:layout_gravity="right|top"
           android:layout_row="7"
           android:background="@null"
           android:src="@drawable/zen_multi_9" />

   </GridLayout>

</RelativeLayout>
