<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#484848"
    android:textAlignment="center"
    tools:context="ua.co.zen.DoorActivity" >
    
    <GridLayout
        android:id="@+id/tempLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:columnCount="4"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/headerButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="@null"
            android:src="@drawable/zen_1" />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="#ffffff"
            android:text=" " />

  

        <ImageView
            android:id="@+id/enterDoor"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/zen_door_green_1" />

        <ImageView
            android:id="@+id/windsleepDoor"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="3"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:src="@drawable/zen_door_green_2" />

        <ImageView
            android:id="@+id/windkabDoor"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="4"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/zen_door_green_3" />

        <ImageView
            android:id="@+id/kladowDoor"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="4"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:src="@drawable/zen_door_green_4" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_column="0"
            android:layout_gravity="center|top"
            android:layout_row="5"
            android:src="@drawable/zen_door_red_1" />
        
    </GridLayout>
    
    
    

   
</RelativeLayout>
